<h1 class="center text_size"><%= t('views.devise.session.title') %></h1>
<div class="container bg-light">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="row justify-content-center">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mt-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label t('views.devise.session.remember') %>
            </div>
          <% end %>

          <div class="actions mb-3">
            <%= f.submit t('views.devise.session.enter'), class: 'btn btn-secondary' %>
          </div>

          <%#= render "devise/shared/links" %>

          <% if params[:locale] == 'ru' || params[:locale] == nil %>
            <%= link_to image_pack_tag("not_enter_ru.png", alt: 'prohibited',  class: "btn warn_ru_size"), new_user_password_path, class: "mt-1", title: 'Не влезай!' %>
          <% else %>
            <%= link_to image_pack_tag("not_enter_en.png", alt: 'prohibited',  class: "btn warn_en_size"), new_user_password_path, class: "mt-1", title: 'Не влезай!' %>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>
