<%= form_with(model: chat_bot_topic, local: true) do |form| %>
  <% if chat_bot_topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chat_bot_topic.errors.count, "error") %> prohibited this photo from being saved:</h2>
      <ul>
        <% chat_bot_topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-3">
    <%= form.label t('models.chatbot.label_ru') %>
    <%= form.text_field :label_ru, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label t('models.chatbot.label_en') %>
    <%= form.text_field :label_en, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label t('models.chatbot.is_shown') %>
    <%= form.number_field :show_order, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit t('views.photos.form.save'), class: 'btn btn-sm btn-info' %>

    <%= link_to t('views.photos.show.back'), chat_bot_topics_path, class: 'btn btn-sm btn-secondary' %>
  </div>
<% end %>
