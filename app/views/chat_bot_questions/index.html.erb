<%= breadcrumbs [t('views.home.announces.header'), root_path], [t('app.navbar.menu.admin_options'), nil], [ t('views.chatbots.index.header'), chat_bot_topics_path], [@chat_bot_topic.label, nil], [t('views.chatbot_questions.index.header'), nil] %>

<div class="container bg-light cont_height">
  <div class="row mt-3">
    <div class="col-sm-12">

      <%= link_to t('views.chatbot_questions.index.add_button'), new_chat_bot_topic_chat_bot_question_path(@chat_bot_topic), class: 'btn btn-sm btn-primary my-2' %>
      <%= link_to t('views.photos.show.back'), chat_bot_topics_path, class: 'btn btn-sm btn-secondary my-2' %>

      <div class="bottom_line_blog"></div>
      <div class="row">
        <div class="col-1 mt-3 text_size_smaller"><%= t('views.chatbot_questions.index.table.order') %></div>
        <div class="col-9 mt-3 text_size_smaller"><%= t('views.chatbot_questions.index.table.body') %></div>
        <div class="col-2 mt-3 text_size_smaller"><%= t('views.chatbot_questions.index.table.next_id') %></div>
      </div>
      <div class="bottom_line_blog"></div>

      <% @chat_bot_questions.each do |question| %>
        <div class="row">
          <div class="col-1 mt-3 text_size_smaller"><%= question.order %></div>
          <div class="col-9 mt-3 text_size_smaller"><%= question.body %></div>
          <div class="col-2 mt-3 text_size_smaller"><%= question.next_id %></div>

          <div class="col-12 actions_left">
            <%= link_to t('views.articles.index.article.edit'), edit_chat_bot_topic_chat_bot_question_path(@chat_bot_topic.id, question.id), class: 'btn btn-sm btn-primary mt-2' %>
            <%= link_to t('views.articles.index.article.destroy'), chat_bot_topic_chat_bot_question_path(@chat_bot_topic.id, question.id), method: :delete, data: { confirm: t('views.articles.index.article.sure') }, class: 'btn btn-sm btn-danger mt-2' %>
          </div>

        </div>
        <div class="bottom_line_blog mb-2"></div>
      <% end %>
    </div>
  </div>
</div>
