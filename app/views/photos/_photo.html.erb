<div class="margins-images">
  <% if current_user %>
    <% trash_button = link_to 'X', photo_path(photo), method: :delete, data: { confirm: t('views.articles.index.article.sure') } %>
  <% end %>

  <% if !photo.lat.nil? && photo.lat.length > 0 %>
    <div class='announce_image'>
      <%= link_to(image_pack_tag("gps.png", alt: 'feed', class: 'gps_img_universal_page', title: t('views.photos.universal_page.has_coordinates')), map_path(photo_id: photo), target: "blanc", rel: "noreferrer") %>
    </div>

    <% map_link = link_to(image_pack_tag('gps.png', class: 'social_pic'), map_path(photo_id: photo), title: t('views.photos.universal_page.has_coordinates'),target: "blanc", rel: "noreferrer") %>
  <% end %>

  <% image_title = "#{ photo.description } #{ map_link } #{ trash_button }" %>

  <!--   <%#= link_to photo.photo.url, data: { toggle: "lightbox", title: image_title, gallery: "img-gallery", footer: photo.body }, title: photo.description do %>
      <div class='zoom'>
        <%#= image_tag photo.photo.thumb.url, class: 'rounded_corners' %>
      </div>
    <%# end %> -->

  <%= link_to photo_path(photo), target: "blanc", rel: "noreferrer" do %>
    <div class='zoom'>
      <%= image_tag photo.photo.thumb.url, class: 'rounded_corners' %>
    </div>
  <% end %>

  <% if current_user %>
    <div class='center'>
      <%#= link_to "#{t('views.photos.show.show')} | ", photo.photo.url %>
      <%= link_to(image_pack_tag("edit.png", alt: 'edit', class: 'img_icon'), edit_photo_path(photo)) %> &nbsp;|&nbsp;
      <%= link_to(image_pack_tag("del.png", alt: 'delete', class: 'img_icon'), photo, method: :delete, data: { confirm: t('views.articles.index.article.sure') }) %>
    </div>
  <% end %>
</div>
