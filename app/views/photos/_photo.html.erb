<div class="margins-images">
  <% if current_user %>
    <% trash_button = link_to 'X', photo_path(photo), method: :delete, data: { confirm: t('views.articles.index.article.sure') } %>
  <% end %>

  <% image_title = "#{photo.description} #{trash_button}" %>

  <%= link_to photo.photo.url, data: { toggle: "lightbox", title: image_title, gallery: "img-gallery" } do %>
    <div class='zoom'>
      <%= image_tag photo.photo.thumb.url %>
    </div>
  <% end %>

  <% if current_user %>
    <div class='center'>
      <%= link_to 'Show |', photo.photo.url %>
      <%= link_to 'Edit |', edit_photo_path(photo) %>
      <%= link_to 'Destroy', photo, method: :delete, data: { confirm: t('views.articles.index.article.sure') } %>
    </div>
  <% end %>
</div>
