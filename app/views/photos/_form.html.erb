<%= form_with(model: photo, local: true, html: { multipart: true }) do |form| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
      <ul>
        <% photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% if photo.created_at %>
      <%= "#{ t('views.photos.form.uploaded') }: #{ l(photo.created_at, format: "%d.%m.%Y, %H:%M") }" %>
    <% end %>
  </div><br/>

  <div class="form-group">
    <%= form.label t('models.photo.photo') %>
    <%= form.file_field :photo %>
  </div>

  <div class="form-group mt-3">
    <%= form.label t('models.photo.description_ru') %>
    <%= form.text_field :description_ru, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label t('models.photo.body_ru') %>
    <%= form.text_area :body_ru, size: '50x3', class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label t('models.photo.description_en') %>
    <%= form.text_field :description_en, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label t('models.photo.body_en') %>
    <%= form.text_area :body_en, size: '50x3', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label t('models.photo.type_id') %><br/>
    <%= form.collection_select :type_id, Type.all, :id, :translated_name %>
  </div>

  <div class="form-group">
    <%= form.label 'Координаты одной строкой через запятую' %>
    <%= form.text_field :one_string_coordinates, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :hashtag_names, "Хэштеги" %>

    <!-- Скрытое поле для хранения хэштегов -->
    <%= form.hidden_field :hashtag_names, id: "entity_hashtag_names", value: photo.hashtag_names, class: "hashtags-hidden-input" %>

    <!-- Поле для ввода новых хэштегов -->
    <select id="hashtag-input" class="form-control hashtags-input">
      <!-- Опции будут добавляться динамически -->
    </select>

    <!-- Контейнер для отображения добавленных хэштегов -->
    <div id="hashtags-container" class="mt-2 d-flex flex-wrap hashtags-container">
      <% if photo.hashtags.any? %>
        <% photo.hashtags.each do |hashtag| %>
          <span class="hashtag_badge hashtag-tag margin_r_2" data-tag-name="<%= hashtag.name %>">
            #<%= hashtag.name %> 
            <button type="button" class="btn-close btn-close-white ml-1 btn btn-light">❌</button>
          </span>
        <% end %>
      <% end %>
    </div>
    
    <div class="form-text">
      <small class="text-muted">
        • Начните вводить хэштег для автодополнения<br>
        • Нажмите Enter, запятую или Tab для добавления<br>
      </small>
    </div>
  </div>

  <div class="actions mb-3">
    <%= form.submit t('views.photos.form.save'), class: 'btn btn-success btn-sm' %>
    <%= link_to t('views.photos.show.back'), :back, class: 'btn btn-secondary btn-sm' %>
  </div>
<% end %>
