<% if current_user %>
  <div class="center">
    <%= link_to(image_pack_tag("edit.png", alt: 'edit', class: 'img_icon'), edit_photo_path(@photo)) %> | 
    <%= link_to(image_pack_tag("del.png", alt: 'delete', class: 'img_icon'), @photo, method: :delete, data: { confirm: t('views.articles.index.article.sure') }) %>
  </div>
<% end %>

<div class='center text_size header_top_buffer'>
  <span class='font_120'><b><%= @photo.description %></b></span>

  <% if @photo.lat.present? && @photo.long.present? %>
    <span class='font_80'> (<%= @photo.lat %>, <%= @photo.long %>)</span>
  <% end %>
</div>

<% if @photo.body.present? %>
  <div class="center text_size"><%= @photo.body %></div>
<% end %>
<div class='center_image'>
  <%= image_tag(@photo.photo.url, class: "img_max_height") %>
</div>

<script>
  $(function(){
    $('.img_max_height').click(function() {
      window.top.close();
    });
  });
</script>
