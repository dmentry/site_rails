<% if current_user %>
  <div class="center">
    <%= link_to(image_pack_tag("edit.png", alt: 'edit', class: 'img_icon'), edit_photo_path(@photo)) %>
  </div>
<% end %>
<h1 class="center text_size header_top_buffer"><%= @photo.description %></h1>
<% if @photo.body.present? %>
  <div class="center text_size"><%= @photo.body %></div>
<% end %>
<div class='center_image'>
  <%= image_tag(@photo.photo.url, class: "img_max_height") %>
</div>

<script>
  $(function(){
    $('.img_max_height').click(function() {
      window.top.close();
    });
  });
</script>
