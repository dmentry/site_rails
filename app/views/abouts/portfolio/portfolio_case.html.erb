<h1 class="center text_size header_top_buffer"><%= @label %></h1>
<div class="container-fluid bg-<%= @bg_color %>">
  <% if @all_ps_images_qnt && @all_ps_images_qnt > 0 %>
    <% @all_ps_images_qnt.times do |i| %>
      <div class="row mt-3">
        <% if i == 0 %>
          <div class="col-12 px-0">
        <% else %>
          <div class="col-12 px-0 col-md-8 mb-3">
        <% end %>

        <% if (i + 1) == @all_ps_images_qnt %>
          <!-- <img class='rounded_corners' src='<%#= "/portfolio/#{ @images_path }/#{ i + 1 }.png" %>' alt='screenshot'> -->
          <img src='<%= "/portfolio/#{ @images_path }/#{ i + 1 }.png" %>' class="rounded_corners" alt="screenshot" data-aos="fade-up" data-aos-duration="1000" data-aos-offset="20">
        <% else %>
          <img src='<%= "/portfolio/#{ @images_path }/#{ i + 1 }.png" %>' class="rounded_corners" alt="screenshot" data-aos="fade-up" data-aos-duration="1000" data-aos-offset="20">
        <% end %>
          </div>
      </div>
    <% end %>
  <% end %>

  <% if File.exist?(File.join(@full_path, 'description.txt')) %>
    <% file = File.open(File.join(@full_path, 'description.txt'), 'r:UTF-8') %>
    <% file_data = file.read %>
    <% file.close %>

    <div class="row">
      <h5 class="mt-3 pb-5 pt-3 mb-0 col-12 col-md-9 col-lg-8 mx-auto portfolio_description"><%= file_data.html_safe %></h5>
    </div>
  <% end %>
</div>

<script>
  Aos.init()
</script>
