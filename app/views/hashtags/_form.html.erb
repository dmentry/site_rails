<%= form_with(model: hashtag, local: true) do |form| %>
  <% if hashtag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hashtag.errors.count, "error") %> prohibited this photo from being saved:</h2>
      <ul>
        <% hashtag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-3">
    <%= form.label t('models.hashtag.name') %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="actions mb-3">
    <%= form.submit t('views.photos.form.save'), class: 'btn btn-sm btn-success' %>
    <%= link_to t('views.photos.show.back'), hashtags_path, class: 'btn btn-sm btn-secondary' %>
  </div>
<% end %>
