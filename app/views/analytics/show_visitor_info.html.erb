<h1 class="center text_size header_top_buffer">u_id: <%= @visitor.first.u_id %>. Всего визитов: <%= @visitor_all_visits %></h1>
<div class="container bg-light cont_paddings col-sm-12 col-md-12">

  <table class="table table-sm table-buffers-vertical table-font-my">
    <thead>
      <tr class="table-buffers-vertical">
        <th class="table-info table-buffers-vertical">Визит</th>
        <th class="table-info table-buffers-vertical">Просмотренная страница</th>
        <th class="table-info table-buffers-vertical">Переход со страницы</th>
      </tr>
    </thead>
    <tbody>
      <% @visitor.each do |visitor| %>
        <tr>
          <td>
            <%= visitor.time_visited.strftime("%d.%m.%Y, %H:%M:%S") %>
          </td>
          <td>            
            <%= visitor.page_name.truncate(50) %>
          </td>
          <td>            
            <%= visitor.referrer.truncate(50) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagy-bottom"><%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %></div>
  <%= link_to 'Обратно', show_visitors_info_path, class: 'pagy-bottom-visitor' %>
</div>
