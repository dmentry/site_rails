<%= breadcrumbs [t('views.home.announces.header'), root_path], ["##{@q}", nil] %>

<div class="container cont_height rounded_corners mobile_font_size main_bg_color">
  <div class="row mt-3">
    <div class="col-12 col-md-10 px-1">

      <% @results.each_with_index do |result, i| %>
        <% i == 0 ? mt5 = '' : mt5 = 'mt-5' %>
        <div class='col-12 col-lg-8 col-xl-6 mx-auto px-0 <%= mt5 %>'>
          <div class='announce_dt'><%= result.created_at.strftime("%d.%m.%Y") %></div>

          <% if result.is_a?(Article) %>
            <div class="container rounded_corners px-0">
              <a class='article_title_link' href='<%= article_path(result) %>' title='<%= t("views.articles.index.article.read") %>'>
                <h2 class="mt-3 text_size"><%= result.article_title %></h2>

                <% if result.announce.present? %>
                  <%= raw(result.announce) %>...<br>
                <% else %>
                  <%= raw(result.article_body[0..53]) %><br>
                <% end %>
              </a>

              <% if result.hashtags.any? %>
                <%= render 'hashtags/hashtags_list', entity: result %>
              <% end %>

              <% if i + 1 != @results.size %>
                <div class="bottom_line"></div>
              <% else %>
                <div class="mb-3"></div>
              <% end %>
            </div>
          <% elsif result.is_a?(Photo) %>
            <% category = t("app.navbar.menu.drop_down.#{ result.type.photo_type }") %>

            <h2 class="mt-3 text_size"><%= link_to result.description, public_send("#{ result.type.photo_type }_page_path"), class: 'article_title_link', title: "#{t('views.home.to_photo_category')} '#{category}'" %></h2>

            <% if result.lat.present? %>
              <div class='announce_image'>
                <%= link_to(image_pack_tag("gps.png", alt: 'gps_img', class: 'gps_img', title: t('views.photos.universal_page.has_coordinates')), map_path(photo_id: result), target: "blanc", rel: "noreferrer") %>
              </div>
            <% end %>

            <%= link_to photo_path(result), title: result.description do %>
              <%= image_tag result.photo.thumb.url, class: 'announce_photo_img rounded_corners' %>
            <% end %>

            <% if result.body.present? %>
              <div class="mt-1"><%= result.body %></div>
            <% end %>

            <% if result.hashtags.any? %>
              <%= render 'hashtags/hashtags_list', entity: result %>
            <% end %>

            <% if i + 1 != @results.size %>
              <div class="bottom_line"></div>
            <% else %>
              <div class="mb-3"></div>
            <% end %>

          <% end %>
        </div>

      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-center">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.photo').each(function() {
      let img = new Image();
      let originalImage = $(this);
      
      img.onload = function() {
        if (this.height > this.width) {
          originalImage.addClass('height_and_width');
        }
      };

      img.src = originalImage.attr('src');
    });
  });
</script>
