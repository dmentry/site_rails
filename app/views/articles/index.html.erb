<h1 class="center text_size"><%= t('views.articles.index.blog') %></h1>
<div class="container bg-light">
  <div class="row mt-3">
    <div class="col-sm-12 col-md-10">
      <% @articles.each do |article| %>
        <div>
          <h2 class="mt-3 text_size"><%= article.article_title %></h2><br>

          <%= raw(article.article_body[0..53]) %><br>

          <%= link_to t('views.articles.index.article.read'), article, class: 'btn btn-secondary mt-2' %>
          <% if current_user %>
            <%= link_to t('views.articles.index.article.edit'), edit_article_path(article) %> |
            <%= link_to t('views.articles.index.article.destroy'), article, method: :delete, data: { confirm: t('views.articles.index.article.sure') } %>
          <% end %>

        </div>
        <div class="bottom_line"></div>
        <br>
      <% end %>
      <br>

      <% if current_user %>
        <%= link_to t('views.articles.index.article.new'), new_article_path %>
      <% end %>
    </div>
  </div>
</div>


