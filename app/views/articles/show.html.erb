<h1 class="center">Блог</h1>
<div class="container bg-light">
  <div class="row mt-3">
    <div class="col-10">
      <h2><%= @article.article_title %></h2><br>

      <%= raw(@article.article_body) %><br>

      <% if current_user %>
      <%= link_to 'Edit', edit_article_path(@article) %> |
      <% end %>
      <%= link_to 'Back', articles_path %>
    </div>
  </div>
</div>

<div class="container bg-light">
  <div class="row mt-3">
    <div class="col-10">
      <%= render partial: 'comments/comment', collection: @article.comments.except(@new_comment) %>

      <%= render partial: 'comments/form', locals: {comment: @new_comment || @article.comments.build}  %>
    </div>
  </div>
</div>
