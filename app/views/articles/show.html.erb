<h1 class="center"><%= t('views.articles.index.blog') %></h1>
<div class="container bg-light">
  <div class="row mt-3">
    <div class="col-sm-12 col-md-10">
      <h2 class="mt-3"><%= @article.article_title %></h2><br>

      <%= raw(@article.article_body) %><br>

      <%= link_to t('views.articles.show.back'), articles_path, class: 'btn btn-secondary my-3' %>

      <% if current_user %>
        <%= link_to 'Edit', edit_article_path(@article) %>
      <% end %>

    </div>
  </div>
</div>

<div class="container bg-light">
  <div class="row mt-3">
    <div class="col-sm-12 col-md-10">
      <%= render partial: 'comments/comment', collection: @article.comments.except(@new_comment) %>

      <%= render partial: 'comments/form', locals: {comment: @new_comment || @article.comments.build}  %>
    </div>
  </div>
</div>
